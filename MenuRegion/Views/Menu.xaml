<UserControl x:Class="MenuRegion.Views.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:text="clr-namespace:Infrastructure.SharedResources.Strings;assembly=Infrastructure"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Menu>
            <MenuItem Header="{x:Static text:Text.File}">
                <MenuItem Header="{x:Static text:Text.Process}" Command="NavigateProcessCommand"/>
                <MenuItem Header="{x:Static text:Text.Configure}" Command="NavigateConfigureCommand"/>
                <Separator/>
                <MenuItem Header="{x:Static text:Text.Exit}"/>
            </MenuItem>
            <MenuItem Header="{x:Static text:Text.Help}">
                <MenuItem Header="{x:Static text:Text.About}"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
